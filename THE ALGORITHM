print("How many rows are in the word search?")
numRows = int(input(">"))
print("How many collums are in the word search?")
numCol = int(input(">"))

wordSearch = []

for i in range(numRows):
    print("Please type a row of letters going from left to right, top to bottom.")
    row = input(">")
    row = list(row)
    wordSearch.append(row)

wordBank = []
print("How many word(s) are there to search for?")
numWords = int(input(">"))
for i in range(numWords):
    print("Please enter each word individually below.")
    wordBank.append(input(">"))

        #Search for the first letter of the word

        #look directly around all of the first letters for the second letters
        #Then countinue going in that direction for the next letter until the word is complete.
        #repeat for the other words


solutions = []
for a in range(len(wordBank)):
    letterNum = 0
    firstLetter = []
    endingLetter = []
    totalword = []
    for b in range(numRows):
        print("lil clyde")
        for c in range(numCol):
            print("lil elliot")
            if wordBank[a][letterNum] == wordSearch[b][c]:
                print("hi")
                wordchecker = ""
                wordchecker+=wordSearch[b][c]
                looper = False
                loopadder = 1
                while looper == False:
                    #down
                    if b < numRows-1:
                        print("yo")
                        if wordBank[a][letterNum+loopadder] == wordSearch[b+loopadder][c]:
                            wordchecker+=wordSearch[b+loopadder][c]
                            print("beep")
                            print(wordchecker)
                            if wordchecker == wordBank[a]:
                                print("lil uzi vert")
                                looper = True
                                firstLetter = [b,c]
                                endingLetter = [b+loopadder,c]
                                totalword = [firstLetter,endingLetter]
                                solutions.append(totalword)
                            loopadder+=1
                    #up
                    if b > 0:
                        print("bro")
                        if wordBank[a][letterNum+loopadder] == wordSearch[b-loopadder][c]:
                            wordchecker+=wordSearch[b+loopadder][c]
                            print("meep")
                            print(wordchecker)
                            if wordchecker == wordBank[a]:
                                print("mini boy clyde")
                                looper = True
                                firstLetter = [b,c]
                                endingLetter = [b-loopadder,c]
                                totalword = [firstLetter,endingLetter]
                                solutions.append(totalword)
                            loopadder+=1

                        else:
                            looper = True
print(solutions)





